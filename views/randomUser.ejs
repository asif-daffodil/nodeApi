    <div class="row min-vh-100 d-flex">
      <div class="col-md-10 m-auto">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-auto">
            <img src="<%= picture %>" alt="" class="img-fluid" />
          </div>
          <div class="col-auto">
            <table class="table">
              <tr>
                <td>Id</td>
                <td>:</td>
                <td><%= _id %></td>
              </tr>
